{
  "name": "@jackmisner/utm-toolkit",
  "version": "0.1.0",
  "description": "Capture, store, and append UTM tracking parameters",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/types/react/index.d.ts",
        "default": "./dist/esm/react/index.js"
      },
      "require": {
        "types": "./dist/types/react/index.d.ts",
        "default": "./dist/cjs/react/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.json --declaration --emitDeclarationOnly --outDir dist/types",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"__tests__/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"__tests__/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "utm",
    "tracking",
    "analytics",
    "marketing",
    "url-parameters",
    "utm-parameters",
    "campaign-tracking",
    "attribution"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jackmisner/utm-toolkit.git"
  },
  "author": "Jack Misner",
  "bugs": {
    "url": "https://github.com/jackmisner/utm-toolkit/issues"
  },
  "homepage": "https://github.com/jackmisner/utm-toolkit#readme",
  "engines": {
    "node": ">=16.0.0"
  }
}
